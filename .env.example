# TRRCMS Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Database Configuration - FSD 5.2
# =============================================================================
# Database type: "sqlite" (development) or "postgresql" (production)
TRRCMS_DB_TYPE=sqlite

# PostgreSQL settings (only used when TRRCMS_DB_TYPE=postgresql)
TRRCMS_DB_HOST=localhost
TRRCMS_DB_PORT=5432
TRRCMS_DB_NAME=trrcms
TRRCMS_DB_USER=trrcms_user
TRRCMS_DB_PASSWORD=your_secure_password_here
TRRCMS_DB_MIN_CONN=1
TRRCMS_DB_MAX_CONN=10

# =============================================================================
# Application Settings
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
TRRCMS_LOG_LEVEL=INFO

# Session timeout in minutes
TRRCMS_SESSION_TIMEOUT=30

# =============================================================================
# API Server Settings - FSD FR-D-13, FR-D-15
# =============================================================================
# Local sync server port
TRRCMS_SYNC_PORT=8765

# API server port
TRRCMS_API_PORT=5000

# JWT secret key (generate a secure random string)
TRRCMS_JWT_SECRET=change_this_to_a_secure_random_string

# =============================================================================
# File Storage Settings - FSD 13.5
# =============================================================================
# Attachments storage path
TRRCMS_ATTACHMENTS_PATH=./data/attachments

# UHC archives path
TRRCMS_ARCHIVES_PATH=./data/archives

# Maximum attachment size in MB
TRRCMS_MAX_ATTACHMENT_SIZE=10

# =============================================================================
# PostGIS Settings - FSD 5.2
# =============================================================================
# Default SRID for spatial data
TRRCMS_DEFAULT_SRID=4326

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug mode (never use in production!)
TRRCMS_DEBUG=false
